@using EventManager.Models
@model EventsViewModel

@{
    ViewBag.Title = "Events";
}

<div class="table-actions">
    <h2> Events </h2>
    @Html.ActionLink("Add New Event", "Edit", "Event", null, new { @class = "btn btn-primary btn-sm" })
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Starts</th>
            <th>Ends</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    @foreach (EventViewModel e in Model.eventsList)
    {
        <tr>
            <td>@e.Name</td>
            <td>@e.Location</td>
            <td>@e.StartDate</td>
            <td>@e.EndDate</td>
            <td class="cell-small">
                @Html.ActionLink("Edit", "Edit", "Event", new { id = e.ID }, new { @class = "btn btn-primary btn-sm" })
            </td>
            <td class="cell-small">
                @Html.ActionLink("Delete", "Delete", "Event", new { id = e.ID }, new { onclick = "return confirm('Are you sure you to delete this event?');", @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
</table>
